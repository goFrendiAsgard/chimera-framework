ins: action, migrationConfig
out: output
vars:
  schemas:

    - name: 'cck'
      collectionName: 'web_cck'
      insertGroups: ['superAdmin']
      updateGroups: ['superAdmin']
      deleteGroups: ['superAdmin']
      selectGroups: ['superAdmin']
      initChain: '<%= chainPath %>cck.init.js'
      tabs:
        config: '<span class="glyphicon glyphicon-cog"></span> Configs'
        privilege: '<span class="glyphicon glyphicon-user"></span> Privileges'
        init: '<span class="glyphicon glyphicon-play"></span> Init'
        select: '<span class="glyphicon glyphicon-eye-open"></span> Select'
        insert: '<span class="glyphicon glyphicon-plus"></span> Insert'
        update: '<span class="glyphicon glyphicon-pencil"></span> Update'
        delete: '<span class="glyphicon glyphicon-trash"></span> Delete'
      fields:
        name:
          notNull: 1
          unique: 1
        collectionName: 
          caption: Collection Name
          notNull: 1
        fields:
          inputTemplate: '<%- cck.input.jsonText %>'
          tabularPresentationTemplate: '<%- cck.presentation.text %>'
          presentationTemplate: '<%- cck.presentation.jsonText %>'
          hidden: ['tabular']
          tab: config
        tabs:
          inputTemplate: '<%- cck.input.jsonText %>'
          tabularPresentationTemplate: '<%- cck.presentation.text %>'
          presentationTemplate: '<%- cck.presentation.jsonText %>'
          hidden: ['tabular']
          tab: config
        partial:
          inputTemplate: '<%- cck.input.jsonText %>'
          tabularPresentationTemplate: '<%- cck.presentation.text %>'
          presentationTemplate: '<%- cck.presentation.jsonText %>'
          hidden: ['tabular']
          tab: config
        initChain:
          caption: 'Init Chain'
          inputTemplate: '<%- cck.input.codeText %>'
          tabularPresentationTemplate: '<%- cck.presentation.text %>'
          presentationTemplate: '<%- cck.presentation.jsonText %>'
          hidden: ['tabular']
          editor: 'yaml'
          tab: init
        insertGroups:
          caption: 'Insert Privileges'
          inputTemplate: '<%- cck.input.checkBoxes %>'
          options:
            loggedIn: loggedIn
            loggedOut: loggedOut
          tab: privilege
        updateGroups:
          caption: 'Update Privileges'
          inputTemplate: '<%- cck.input.checkBoxes %>'
          options:
            loggedIn: loggedIn
            loggedOut: loggedOut
          tab: privilege
        deleteGroups:
          caption: 'Delete Privileges'
          inputTemplate: '<%- cck.input.checkBoxes %>'
          options:
            loggedIn: loggedIn
            loggedOut: loggedOut
          tab: privilege
        selectGroups:
          caption: 'Select Privileges'
          inputTemplate: '<%- cck.input.checkBoxes %>'
          options:
            loggedIn: loggedIn
            loggedOut: loggedOut
          tab: privilege
        selectChain:
          caption: 'Select Chain'
          inputTemplate: '<%- cck.input.codeText %>'
          tabularPresentationTemplate: '<%- cck.presentation.text %>'
          presentationTemplate: '<%- cck.presentation.jsonText %>'
          hidden: ['tabular']
          editor: 'yaml'
          tab: select
        insertChain:
          caption: 'Insert Chain'
          inputTemplate: '<%- cck.input.codeText %>'
          tabularPresentationTemplate: '<%- cck.presentation.text %>'
          presentationTemplate: '<%- cck.presentation.jsonText %>'
